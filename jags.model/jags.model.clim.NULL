
###################### Light model with  jags ######################
 model {
############ Likelihood ###################
  for (i in 1:N.indiv) {
    varmicroclim[i] ~ dnorm(mu[i],tauC)
    mu[i] <-  param[1]
  }

## priors
  for (j in 1:1){
    param[j] ~dnorm(0,1.0E-6)#I(-5,5)
  }
  tauC~dgamma(0.001,0.001) # Non-informative prior
} # End of the jags model
 